<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.desnyki.infinitymenuexample.MainActivity"
    android:background="#E0E0E0">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.desnyki.library.infinitymenu.RootScrollView
            android:id="@+id/menu_scroll_view"
            android:fadeScrollbars="false"
            android:fadingEdgeLength="0dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <RelativeLayout android:id="@+id/bar1" android:background="@drawable/bar"
                    android:layout_width="match_parent" android:layout_height="64dp" android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/imgLeft1"
                        android:scaleType="fitCenter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_code_white_3x"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter the Matrix"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#F5F5F5"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imgLeft1"
                        android:paddingStart="24dp"
                        />
                    <ImageView
                        android:scaleType="fitCenter"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentEnd="true"
                        android:tag="arrow"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"

                        />
                </RelativeLayout>
                <RelativeLayout android:id="@+id/bar2" android:background="@drawable/bar"
                    android:layout_width="match_parent" android:layout_height="64dp" android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/imgLeft2"
                        android:scaleType="fitCenter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_credit_card_white_3x"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payments"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#F5F5F5"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imgLeft2"
                        android:paddingStart="24dp"
                        />
                    <ImageView
                        android:id="@+id/arrow1"
                        android:scaleType="fitCenter"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentEnd="true"
                        android:tag="arrow"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"

                        />
                </RelativeLayout>

                <RelativeLayout android:id="@+id/bar3" android:background="@drawable/bar"
                    android:layout_width="match_parent" android:layout_height="64dp" android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/imgLeft3"
                        android:scaleType="fitCenter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_build_white_3x"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#F5F5F5"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imgLeft3"
                        android:paddingStart="24dp"
                        />
                    <ImageView
                        android:id="@+id/arrow2"
                        android:scaleType="fitCenter"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentEnd="true"
                        android:tag="arrow"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"

                        />
                </RelativeLayout>
                <RelativeLayout android:id="@+id/bar4" android:background="@drawable/bar"
                    android:layout_width="match_parent" android:layout_height="64dp" android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/imgLeft4"
                        android:scaleType="fitCenter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_bug_report_white_3x"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report a Bug"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#F5F5F5"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imgLeft4"
                        android:paddingStart="24dp"
                        />
                    <ImageView
                        android:id="@+id/arrow3"
                        android:scaleType="fitCenter"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentEnd="true"
                        android:tag="arrow"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"

                        />
                </RelativeLayout>
            </LinearLayout>
        </com.desnyki.library.infinitymenu.RootScrollView>
        <com.desnyki.library.infinitymenu.ChildScrollView
            android:id="@+id/child_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:animateLayoutChanges="true"
            >
        </com.desnyki.library.infinitymenu.ChildScrollView>
    </FrameLayout>
</RelativeLayout>
